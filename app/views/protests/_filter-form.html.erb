<%= form_tag protests_path, method: :get do %>
  <%= select_tag :search_station, options_for_select(Station.all.map { |station| [station.name, station.id] }.unshift([t(".select-station"), ""]), selected: params[:search_station]), class: "search_station" %>
  <br>
  <%= select_tag :search_category, options_for_select(AssaultCategory.all.map { |station| [station.name, station.id] }.unshift([t(".select-category"), ""]), selected: params[:search_category]), class: "search_category" %>
  <br>
  <%= date_field_tag :start_date, params[:start_date], class: "search_date" %>
  <br>
  <%= submit_tag t(".search"), class: "btn see-results animate__animated animate__pulse animate__slower animate__infinite" %>
  <br>
  <%= link_to t(".clear"), "/protests?", class: "restore-link" %>
<% end %>

