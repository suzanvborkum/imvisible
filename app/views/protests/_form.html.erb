<%= simple_form_for @protest do |f| %>
    <!-- Witness -->
    <div class="experienced-select flex-50">
      <div class="form-check-experienced">
        <input class="form-check-experienced-input radio_buttons optional" type="radio" value="0" name="protest[experienced]" id="protest_experienced_0">
        <label class="form-check-experienced-label collection_radio_button experience-label" for="protest_experienced_0" id='label-0'>
          EXPERIENCED
        </label>
      </div>
      <div class="form-check-experienced flex-50">
        <input class="form-check-experienced-input radio_buttons optional" type="radio" value="1" name="protest[experienced]" id="protest_experienced_1">
        <label class="form-check-experienced-label collection_radio_buttons experience-label" for="protest_experienced_1" id='label-1'>
          WITNESSED
        </label>
      </div>
    </div>
    <div id="select-station-container">
      <%= f.association :station, as: :select, label_html: { class:"no-label " } %>
    </div>
    <div class="flex-50">
      <div class="date-select">
        <%= f.input :date, wrapper_html: { class: 'flex-select' }, as: :date, html5: true, label_html: { class:"no-label" } %>
      </div>
      <div class="time-select">
        <%= f.input :time, placeholder: "7:00 - 8:00", label_html: { class:"no-label" } %>
      </div>
    </div>

    <div class="row assault-options1">
      <div class="col-xs-6">
        <% AssaultCategory.all.each do |category| %>
          <label class="label" for="protest_assault_category_ids_<%= category.id %>">
          <span><%= category.name.upcase %></span>
          <input type="checkbox" class="checkbox" value="<%= category.id %>" name="protest[assault_category_ids][]" id="protest_assault_category_ids_<%= category.id %>"/>
          <span class="check-mark"></span>
          </label>
          <!-- <ul class="form-check">
            <li><span style="white-space: nowrap;"><input class="form-check-input check_boxes optional checkmark" type="checkbox" value="<%= category.id %>" name="protest[assault_category_ids][]" id="protest_assault_category_ids_<%= category.id %>">
            <label class="form-check-label collection_check_boxes" for="protest_assault_category_ids_<%= category.id %>">
              <%= category.name.upcase %>
            </label></span></li>
          </ul> -->
        <% end %>
    </div>
  </div>

  <div class="description-box">
    <%= f.input :description, placeholder: "Tell us what happened...", label_html: { class:"no-label" }  %>
  </div>
  <div class="center-button">
    <div class="button-div animate__animated animate__pulse animate__slower animate__infinite">
      <%= f.button :submit, "Protest Now", class: 'btn protest-btn' %>
    </div>
  </div>
<% end %>






